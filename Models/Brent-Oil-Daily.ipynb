# Importing pandas to read the csv

import pandas as pd

# Setting up our pandas dataframe
df = pd.read_csv("oil-prices/data/brent-daily.csv")

# Showing the first few rows of the dataframe
df.head()

# Convert to datetime
df['Date'] = pd.to_datetime(df['Date'])

# Convert into integer timestamps starting from 0
df['Days'] = (df['Date'] - df['Date'].iloc[0]).dt.days

# Dropping the date column
df = df.drop('Date', axis=1)

# Display the first few rows
df.head()

# Initializing variables
X = df[['Days']]
y = df['Price']

# Setting up the train_test_split function from sklearn.model_selection
from sklearn.model_selection import train_test_split

X_train, X_test, y_train, y_test = train_test_split(X, y, random_state=42, test_size=0.3)

# Setting up the LinearRegression function from sklearn.linear_model
from sklearn.linear_model import LinearRegression

regression = LinearRegression()

# Getting our mean_absolute_error, mean_square_error, and r2_score set up from sklearn.metrics
from sklearn.metrics import mean_absolute_error, mean_squared_error, r2_score

# Setting up our y_pred variable using regression.predict()
y_pred = regression.predict(X_test)

mae = mean_absolute_error(y_test, y_pred)
mse = mean_squared_error(y_test, y_pred)
r2 = r2_score(y_test, y_pred)

print(f"Mean absolute error: {mae}")
print(f"Mean squared error: {mse}")
print(f"r^2 score: {r2}")
